<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TercerFragment"
    tools:ignore="MissingDefaultResource"
    android:background="#fff0ff">

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top|center"
        android:paddingTop="40dp"
        android:src="@drawable/p2" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="iMac M1"
        android:textColor="@color/purple_700"
        android:textStyle="bold"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="100dp"
        android:padding="20dp"
        android:textColor="@color/purple_700"
        android:text="El chip M1 y macOS Ventura unen fuerzas para llevar a la iMac a un nuevo nivel de rendimiento, eficiencia y seguridad. La iMac se activa casi al instante, las apps se abren enseguida y todo el sistema funciona de forma ágil, rápida y sin demoras. "
        android:textAlignment="center"
        android:textSize="17sp" />

    <Button
        android:id="@+id/btnRegresar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center|bottom"
        android:layout_marginBottom="120dp"
        android:onClick="onClick"
        android:text="Regresar"
        android:textSize="15sp"
        app:backgroundTint="@color/purple_700" />
</FrameLayout>